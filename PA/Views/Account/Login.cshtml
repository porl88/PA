@model PA.Models.LoginModel

@{
    Layout = null;
    ViewBag.Title = "Log in";
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="en-gb" dir="ltr">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="user-scalable=no, width=device-width" />
    <meta name="apple-mobile-web-app-capable" content="yes" />

    <style>
        /* ROOT ELEMENT *********************************************************************************************************************************************************************************************/
        html {
            line-height: 1;
            -webkit-font-smoothing: antialiased;
            box-sizing: border-box;
        }

        /* UNIVERSAL ELEMENTS *********************************************************************************************************************************************************************************************/
        *, *:before, *:after {
            /* http://css-tricks.com/inheriting-box-sizing-probably-slightly-better-best-practice/ */
            box-sizing: inherit;
        }

        /* BLOCK-LEVEL ELEMENTS *********************************************************************************************************************************************************************************************/
        body, main, section, article, header, footer, nav, aside, div, h1, h2, h3, h4, h5, h6, hr, noscript, p, blockquote, pre, ol, ul, li, dl, dt, dd, form, fieldset, figure, figcaption, address, video, audio, canvas, output {
            margin: 0;
            padding: 0;
            border: none;
            vertical-align: baseline;
        }

        /* INLINE ELEMENTS *********************************************************************************************************************************************************************************************/
        a, em, i, strong, b, mark, u, s, small, cite, q, dfn, abbr, data, time, code, var, samp, kbd, sub, sup, ruby, rt, rp, bdi, bdo, span {
            vertical-align: baseline;
        }

        /* LIST ELEMENTS *********************************************************************************************************************************************************************************************/
        ul, ol {
            list-style: none;
        }

        /* FORM ELEMENTS *********************************************************************************************************************************************************************************************/

        label[for] {
            cursor: pointer;
        }

        /* all form fields */
        input, textarea, select, button {
            font-family: inherit;
            /* do not use font - do not want to inherit line-height */
            font-size: inherit;
            outline: none;
        }

            /* Buttons */
            input[type="submit"], input[type="reset"], input[type="button"], button {
                cursor: pointer;
                -webkit-appearance: none;
            }

                /* removes the extra padding and border on buttons and input tags for Firefox browsers
                       http://css-tricks.com/forums/topic/button-padding-issue/ */
                button::-moz-focus-inner, input[type="button"]::-moz-focus-inner, input[type="submit"]::-moz-focus-inner, input[type="reset"]::-moz-focus-inner {
                    padding: 0;
                    border: 0;
                }





        html {
            height: 100%;
            font-size: 18px;
            font-family: "Lucida Sans Unicode", "Lucida Grande", sans-serif;
        }

        body {
            height: 100%;
            padding: 0;
            margin: 0;
            background-color: #FFF;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        section {
            width: 30rem;
            border: 1px solid #000;
            padding: 1.5rem;
            font-size: 22px;
        }

        fieldset > legend {
            font-variant: small-caps;
            font-size: 25px;
            display: block;
            margin-bottom: 1.5rem;
        }

        fieldset ol > li {
            margin-bottom: 1rem;
        }

        fieldset label {
            display: inline-block;
            width: 40%;
        }

        fieldset input[type="text"],
        fieldset input[type="password"] {
            width: 60%;
        }

        .button-bar {
            text-align: right;
        }

        fieldset input[type="submit"] {
            background: linear-gradient(to bottom, rgba(179,220,237,1) 0%,rgba(41,184,229,1) 50%,rgba(188,224,238,1) 100%); /* W3C */
            border-radius: 5px;
        }

        .validation-summary-errors {
            background-color: #FFEEEE;
            border: 2px solid #CC0000;
            color: #000;
            padding: 1rem;
            margin-bottom: 1rem;
            font-size: 1rem;
            text-align: center;
        }

            .validation-summary-errors ul {
                margin: 0;
                padding: 0;
                list-style: none;
            }

        .field-validation-error {
            color: #CC0000;
        }
    </style>

</head>
<body>

    <section>
        @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <fieldset>
                <legend>Log in Form</legend>
                <ol>
                    <li>
                        @Html.LabelFor(m => m.UserName)@Html.TextBoxFor(m => m.UserName, new { maxlength = "30", required = "required", autofocus = "autofocus" })
                    </li>
                    <li>
                        @Html.LabelFor(m => m.Password)@Html.PasswordFor(m => m.Password, new { required = "required" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </li>
                </ol>
                <div class="button-bar">
                    <input type="submit" value="Log in" />
                </div>
            </fieldset>}
    </section>

</body>
</html>
